<h2>Solving steps</h2>
	<ul>
		{{#each groupedContent}}
			<p>{{group.key}}</p>
			{{#each content}}
				<li>
					{{#link-to 'solving_step' this}}
						{{ step }}, created {{momentTime createdAt}}
					{{/link-to}}
					<button {{action 'delete' this}} class="destroy"></button>
				</li>
			{{/each}}
		{{/each}}
	</ul>
<p>
	{{#link-to 'solving_steps.new'}}
		Insert a new solving step
	{{/link-to}}
</p>

{{outlet}}