<form {{action 'create' this on="submit"}} >
	{{#if isSaving}}
		<p>Saving record ...</p>
	{{/if}}
	<p>
		{{input valueBinding="step" placeholder="What do you wanna do?" autofocus="autofocus"}}
	</p>
	<p>
		{{textarea valueBinding="description" class="new-step" placeholder="here goes step description"}}
	</p>
	<button class="btn">
		Create
	</button>
</form>