<div class="container" style="margin-top: 80px;">
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "form-password-reset" }) do |f| %>
	  <h2 class="form-signin-heading">Forgot your password?</h2>
	  <%= devise_error_messages! %>
	  <%= f.label :email %>
	  <%= f.email_field :email, :autofocus => true, :placeholder => "enter email ...", :class => "input-block-level" %>
	  <%= f.submit "Send me reset password instructions", :class => "btn btn-large btn-primary" %>
	  <ul class="nav nav-pills navcustom">
	  	<li><%= link_to "Sign in", new_session_path(resource_name) %></li>
		<li><%= link_to "Create an account ...", new_registration_path(resource_name) %></li>
	  </ul>
	<% end %>
</div>