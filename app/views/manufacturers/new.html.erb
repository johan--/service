<div class="container">
<%= link_to(raw("<i class='icon-chevron-left'></i>back"), {:action => 'list'}, {:class => 'btn spatiu-sus'}) %>
<h1>New Manufacturer</h1>
<%= form_for(:manufacturer, :url => {:action => 'create'}, html: {class: "form-horizontal"}) do |f| %>
  <div class="control-group">
    <label class="control-label" for="inputname">Manufacturer name :</label>
    <div class="controls">
      <%= f.text_field(:name) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputaddress">Country :</label>
    <div class="controls">
      <%= f.text_field(:country) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputaddress">City :</label>
    <div class="controls">
      <%= f.text_field(:city) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputaddress">Address :</label>
    <div class="controls">
      <%= f.text_field(:address) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputaddress">Postal code :</label>
    <div class="controls">
      <%= f.text_field(:postal_code) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputofficetel">Office telephone :</label>
    <div class="controls">
      <%= f.text_field(:office_tel) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputofficetel">Fax :</label>
    <div class="controls">
      <%= f.text_field(:fax) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputmail">Office e-mail :</label>
    <div class="controls">
      <%= f.text_field(:office_mail) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputofficetel">Mobile :</label>
    <div class="controls">
      <%= f.text_field(:mobile) %>
    </div>
  </div>
  <div class="controls">
  <%= submit_tag("Save manufacturer", :class => 'btn btn-success') %>
</div>
<% end %>

</div>