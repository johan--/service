<h2>Manufacturers list</h2>
<table cellpadding="0" cellspacing="0" border="0" id="manufacturers_list" class="table table-striped table-bordered">
  <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Address</th>
        <th>Office tel</th>
        <th>Office mail</th>
        <th>Last updated</th>
      </tr>
  </thead>
  <tbody>
  	<% @manufacturers.each do |manufacturer| %>
      <tr>
        <td></td>
        <td><%= link_to manufacturer.name, manufacturer_path(manufacturer) %></td>
        <td><%= manufacturer.address %></td>
        <td><%= manufacturer.office_tel %></td>
        <td><%= manufacturer.office_mail %></td>
        <td><%= date_format(manufacturer.updated_at) %></td>
        <% end %>
      </tr>
  </tbody>
</table>
<%= render(:partial => "shared/add_button") %>