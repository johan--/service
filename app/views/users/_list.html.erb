<div class="button-group">
	<% if admin_user %>
		<%= link_to "New admin", new_admin_users_path, :class => "btn btn-primary" %>
	<% else %>
		<%= link_to "New client user", cp_new_users_path, :class => "btn btn-primary" %>
	<% end %>
</div>

<table cellpadding="0" cellspacing="0" border="0" id="manage_users_table_<%= admin_user ? 'admin' : 'regular' %>" class="table table-striped table-bordered" data-source="<%= users_path(format: 'json') %>">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Pending confirmation</th>
			<th>Email</th>
			<th>Last visit date</th>
			<th>Registration date</th>
			<th>Registered by</th>
		</tr>
	</thead>
	<tbody>
	</tbody>
</table>
