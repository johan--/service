<div class="container user" style="margin-top: 80px;">
	<%= form_for(resource, :as => resource_name, html: { class: "form-signin" }, :url => session_path(resource_name)) do |f| %>
	<h2 class="form-signin-heading">Please sign in</h2>

	  <%= f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "email" %>
	  <%= f.password_field :password, :class => "input-block-level", :placeholder => "password" %>

	  <% if devise_mapping.rememberable? %>
	    <label class="checkbox">
	    	<%= f.check_box :remember_me %> 
	    	<%= f.label :remember_me %>
	    </label>
	  <% end -%>

	<div><%= f.submit "Sign in", :class => "btn btn-large btn-primary" %></div>
	<ul class="nav nav-pills">
		<!-- <p style='display: inline-block;'>Not registered?</p> -->
			<li><%= link_to "Create an account ...", new_registration_path(resource_name) %></li>
			<li><%= link_to "Forgot your password?", new_password_path(resource_name) %></li>
	</ul>
	<% end %>
</div>