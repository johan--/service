<div class="container">
<%= link_to(raw("<i class='icon-chevron-left'></i>back"), {:action => 'show', :id => @machine.id}, {:class => 'btn spatiu-sus'}) %>

<% if !flash[:notice].blank? %>
<div class="alert alert-success distantier-alerta">
<button type="button" class="close" data-dismiss="alert">&times;</button>
<%= flash[:notice] %>
</div>
<% end %>

<h1>Update Machine</h1>
<%= form_for(:machine, :url => {:action => 'update', :id => @machine.id}, html: {class: "form-horizontal"}) do |f| %>

<div class="form-horizontal">
  <div class="control-group">
    <label class="control-label">Machine type :</label>
    <div class="controls">
      <%= f.text_field(:machine_type) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Machine number :</label>
    <div class="controls">
      <%= f.text_field(:machine_number) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Display name :</label>
    <div class="controls">
      <%= f.text_field(:display_name) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Machine manufacturer :</label>
    <div class="controls">
      <%= f.collection_select(:manufacturer_id, manufacturers, :id, :name) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Machine owner :</label>
    <div class="controls">
      <%= f.collection_select(:machine_owner_id, owners, :id, :name) %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Delivery date :</label>
    <div class="controls">
      <%= f.date_select(:delivery_date) %>
  </div>
</div>
  <div class="control-group">
    <label class="control-label">Waranty period :</label>
    <div class="controls">
      <%= f.text_field(:waranty_period) %>
    </div>
  </div>
</div>
<div class="controls">
  <%= submit_tag("Save machine", :class => 'btn btn-success') %>
</div>
<% end %>
</div>