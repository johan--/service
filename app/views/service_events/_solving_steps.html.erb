<h3>Event solving</h3>

<div class="step-container">
	<% event.solving_steps.each do |t| %>
		<div class="step-header">
			<h5><%= t.step %></h5>
		</div>
		<div class="step-meta">
			<p>
				<%= date_format(t.created_at) %> by <strong><%= t.user.full_name %></strong>
			</p>
		</div>
		<div class="step-content">
			<p>
				<%= t.description %>
			</p>
		</div>
	<% end %>
</div>